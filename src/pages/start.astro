---
import "@fontsource/open-sans";
import LoginForm from "../components/LoginForm";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Start">
  <section class="start">
    <h3>Start</h3>
    <LoginForm client:load />
  </section>
</Layout>

<style lang="scss">
  .start {
    background: #fff;
    width: 340px;
    box-sizing: border-box;
    border-radius: 8px;
    margin: 50px auto 0;
    display: flex;
    flex-direction: column;
    text-align: center;
    padding: 25px;

    h3 {
      font-family: "Open Sans";
      margin: 0 0 25px;
    }
  }
</style>
